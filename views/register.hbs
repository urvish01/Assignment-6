<div>
  <h1 class="mb-3">Register</h1>
  <hr>
  <form method="post" action="/register">
    <div class="form-group mb-3">
      <input type="text" class="form-control" id="InputUserName" name="userName" placeholder="User Name">
    </div>
    <div class="form-group mb-3">
      <input type="email" class="form-control" id="inputEmail1" name="email" aria-describedby="emailHelp" placeholder="Enter email">
    </div>
    <div class="form-group mb-3">
      <input type="password" class="form-control" id="inputPassword1" name="password" placeholder="Password">
    </div>
    <div class="form-group mb-3">
      <input type="password" class="form-control" id="inputConfirmPassword1" name="confirmPassword" placeholder="Confirm Password">
    </div>
  
    <button type="submit" class="btn btn-success">Submit</button>
  </form>
</div>
